<Window x:Class="manipulatory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="nr_port" HorizontalAlignment="Left" Height="25" Margin="146,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" TextChanged="nr_port_TextChanged"/>
        <Button x:Name="bt_connect" Content="CONNECT" HorizontalAlignment="Left" Height="29" Margin="93,84,0,0" VerticalAlignment="Top" Width="117" Click="bt_connect_Click"/>
        <Button x:Name="bt_disconnect" Content="DISCONNECT" HorizontalAlignment="Left" Height="29" Margin="246,84,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="bt_next" Content="NEXT" HorizontalAlignment="Left" Height="22" Margin="406,287,0,0" VerticalAlignment="Top" Width="101"/>
        <RadioButton x:Name="rb_status" Content="" HorizontalAlignment="Left" Height="20" Margin="93,134,0,0" VerticalAlignment="Top" Width="16"/>
        <TextBox x:Name="tb_status" HorizontalAlignment="Left" Height="36" Margin="146,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>

    </Grid>
</Window>
